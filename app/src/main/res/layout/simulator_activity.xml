<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/csgo_background">

                <include layout="@layout/title"
                    android:id="@+id/simulator_title"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/item_frame">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_2"
                        android:layout_width="485dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="#000510"/>

                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/select_bar"
                    android:layout_width="1dp"
                    android:layout_height="170dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="#FF9900"
                    app:cardElevation="8dp"/>

                <Button
                    android:id="@+id/start_button"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/select_bar"
                    android:background="@drawable/start_button"
                    android:soundEffectsEnabled="false"
                    android:text="@string/start"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginTop="30dp"/>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@color/darkblue"
                android:layout_gravity="start">

                <fragment
                    android:id="@+id/switch_case_fragment"
                    android:name="com.zerlings.gabeisfaker.fragment.CaseFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </android.support.v4.widget.DrawerLayout>

        <RelativeLayout
            android:id="@+id/unique_weapon_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkblue"
            android:visibility="gone">

            <Button
                android:id="@+id/discard_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="80dp"
                android:text="@string/discard"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/circle_button"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/item_frame">

                <include layout="@layout/unique_weapon_item"
                         android:layout_margin="20dp"
                         android:layout_width="150dp"
                         android:layout_height="wrap_content"
                         android:layout_centerInParent="true"
                         android:id="@+id/unique_item"/>

            </RelativeLayout>

            <Button
                android:id="@+id/keep_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="80dp"
                android:text="@string/keep"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/circle_button"/>

        </RelativeLayout>

    </FrameLayout>

</layout>

